#include <grafik.h>
#include "HDM64GS12.C"
#include "graphics.c"
char yazi1[]="BOZOK";
char yazi2[]="UNIVERSITY";
int i,x1,y1,x2,y2;

void main()
{
   set_tris_b(0x00);
   set_tris_d(0x00);
   output_b(0x00);
   output_d(0x00);
   
   glcd_init(ON);
   
   while(TRUE)
   {
      glcd_init(ON);
      glcd_text57(39,5,yazi1,2,ON);
      glcd_text57(5,30,yazi2,2,ON);
      delay_ms(2000);
      
      glcd_init(ON);
      x1=5;
      y1=5;
      x2=100;
      y2=5;
      
      
      
      
      
   }

}
